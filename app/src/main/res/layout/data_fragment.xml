<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlMyFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wearables_my_data"
                        style="@style/bold_medium"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="20sp"

                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="18sp"
                        android:layout_marginBottom="10sp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/noData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/error_no_data"
                                style="@style/bold_medium"
                                android:layout_gravity="center"
                                android:layout_marginVertical="10sp"
                                android:layout_marginHorizontal="20sp"
                                android:visibility="gone"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginHorizontal="10sp"
                                android:layout_marginTop="10sp"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/vytal_signal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:text="@string/vytal_signal"
                                    style="@style/normal_medium"
                                    />
                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/cvAccessData"
                                    android:layout_width="48sp"
                                    android:layout_height="48sp"
                                    android:backgroundTint="@color/green_92"
                                    app:cardCornerRadius="50sp"
                                    app:strokeWidth="1sp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:checkable="true"
                                    android:layout_gravity="end"
                                    android:elevation="5sp"
                                    >
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/arrow_left_icon"
                                        android:padding="10sp"
                                        />
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvMetrics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10sp"/>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wearables_my_friends_data"
                        style="@style/bold_medium"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="20sp"

                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUsersMetrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/tvNoDataUsersMetrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/error_no_have_friends"
                        style="@style/normal_medium"
                        android:layout_marginHorizontal="15sp"/>

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>