<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMetricColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15sp"
    android:layout_marginHorizontal="11sp"
    android:layout_marginVertical="7sp"
    app:strokeWidth="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="16sp">


        <ImageView
            android:id="@+id/imageType"
            android:layout_width="35sp"
            android:layout_height="45sp"
            android:layout_marginBottom="5sp"
            />
        <TextView
            android:id="@+id/valueMetric"
            style="@style/normal_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:gravity="center"
            android:text="120 pasos"
            android:textColor="@color/black_4b"
            android:layout_marginHorizontal="17sp"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>