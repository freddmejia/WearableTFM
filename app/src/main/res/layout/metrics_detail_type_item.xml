<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10sp">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:layout_marginHorizontal="10sp">
            <TextView
                android:id="@+id/tvValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="190 bmp lasdh lashdlakshdklashda sklhdjksada skdhasdsad"
                style="@style/normal_medium"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tvDatetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12:12:12"
                style="@style/normal_medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_85"
            android:layout_marginHorizontal="6sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/totalSleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/normal_medium"
            android:layout_marginBottom="10sp"
            android:layout_marginHorizontal="10sp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="15sp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDetailsDataMetrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</RelativeLayout>