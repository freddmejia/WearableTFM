<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10sp">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:layout_marginHorizontal="10sp">
            <TextView
                android:id="@+id/tvValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="190 bmp lasdh lashdlakshdklashda sklhdjksada skdhasdsad"
                style="@style/normal_medium"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tvDatetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12:12:12"
                style="@style/normal_medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray_85"
            android:layout_marginHorizontal="6sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="15sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="15sp"
                android:paddingVertical="15sp">
                <ImageView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:src="@drawable/sleep_total_icon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_marginHorizontal="18sp"

                    >
                    <TextView
                        android:id="@+id/tvHourTotalSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6H 44 M"
                        style="@style/bold_large"/>
                    <TextView
                        android:id="@+id/tvPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6H 44 M"
                        style="@style/normal_medium"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@drawable/info_icon"
                    android:layout_gravity="end|bottom"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="15sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginVertical="10sp">
                    <ImageView
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:src="@drawable/sleep_bed_icon"
                        android:layout_gravity="end|bottom" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10sp">
                        <TextView
                            android:id="@+id/tvBedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:11"
                            style="@style/bold_medium"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_bed_time"
                            style="@style/normal_medium"
                            android:textColor="@color/gray_85"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:src="@drawable/sleep_wake_icon"
                        android:layout_gravity="end|bottom"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10sp">
                        <TextView
                            android:id="@+id/tvWakeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:11"
                            style="@style/bold_medium"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_bed_time"
                            style="@style/normal_medium"
                            android:textColor="@color/gray_85"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDetailsDataMetrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</RelativeLayout>