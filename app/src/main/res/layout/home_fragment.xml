<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            style="@style/bold_medium"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="8sp"
            android:layout_marginTop="15sp"
            android:textColor="@color/black_4b"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15sp"
            android:layout_marginBottom="17sp"
            android:layout_marginHorizontal="15sp"
            app:cardElevation="8sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="17sp"
                android:layout_marginHorizontal="20sp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    app:cardCornerRadius="30sp"
                    android:backgroundTint="@color/blue_e3"
                    android:layout_gravity="center"
                    app:cardElevation="8sp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="52sp"
                        android:layout_height="52sp"
                        app:cardCornerRadius="30sp"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/square_user_icon"
                            android:padding="11sp"/>
                    </com.google.android.material.card.MaterialCardView>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="jkashdk ahfjkhdsjfhsdjkfhjsdfhkjdsfjhdskjfhdsjkfhjds"
                    style="@style/normal_medium"
                    android:layout_marginHorizontal="10sp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <ImageView
                    android:id="@+id/userEdit"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:src="@drawable/icon_user_edit"
                    android:layout_gravity="end|bottom"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/health"
            style="@style/bold_medium"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="8sp"
            android:textColor="@color/black_4b"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15sp"
            android:layout_marginBottom="17sp"
            android:layout_marginHorizontal="15sp"
            app:cardElevation="8sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="17sp"
                android:layout_marginHorizontal="20sp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/healthWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="25sp"
                    app:cardBackgroundColor="@color/gradient_health1"
                    app:cardElevation="1sp"
                    android:layout_marginHorizontal="10sp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="10sp">
                        <TextView
                            android:id="@+id/weightUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="76"
                            android:gravity="center"
                            style="@style/bold_medium"
                            android:layout_marginBottom="1sp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/health_weight"
                            android:gravity="center"
                            style="@style/bold_medium"
                            android:layout_marginBottom="4sp"
                            android:textColor="@color/rose_ae"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/healthSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="25sp"
                    app:cardBackgroundColor="@color/gradient_health2"
                    app:cardElevation="1sp"
                    android:layout_marginHorizontal="10sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="10sp">
                        <TextView
                            android:id="@+id/sizeUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="76"
                            android:gravity="center"
                            style="@style/bold_medium"
                            android:layout_marginBottom="1sp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/health_size"
                            android:gravity="center"
                            style="@style/bold_medium"
                            android:layout_marginBottom="4sp"
                            android:textColor="@color/green_72"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/healthOld"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="25sp"
                    app:cardBackgroundColor="@color/gradient_health3"
                    app:cardElevation="1sp"
                    android:layout_marginHorizontal="10sp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="10sp">
                        <TextView
                            android:id="@+id/oldUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="76"
                            android:gravity="center"
                            style="@style/bold_medium"
                            android:layout_marginBottom="4sp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/health_old"
                            android:gravity="center"
                            style="@style/bold_medium"
                            android:layout_marginBottom="4sp"
                            android:textColor="@color/red_4c"
                            />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medicine"
            style="@style/bold_medium"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="8sp"
            android:textColor="@color/black_4b"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvMedicines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15sp"
            android:layout_marginBottom="15sp"
            android:layout_marginHorizontal="15sp"
            app:cardElevation="8sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMedicines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="17sp"
                    android:layout_marginHorizontal="20sp"
                    android:clickable="true"
                    android:focusable="true"
                    />
                <ImageView
                    android:id="@+id/addMedicine"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:focusable="true"
                    android:clickable="true"
                    android:src="@drawable/add_circle_icon"
                    android:layout_gravity="right"
                    android:layout_margin="20sp"/>
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>