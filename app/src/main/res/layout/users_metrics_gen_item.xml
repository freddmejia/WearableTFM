<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:gravity="center">
                <TextView
                    android:id="@+id/nameFriend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/vytal_signal"
                    style="@style/normal_medium"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvAccessData"
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:backgroundTint="@color/green_92"
                    app:cardCornerRadius="50sp"
                    app:strokeWidth="1sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    android:layout_gravity="end"
                    android:elevation="5sp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/arrow_left_icon"
                        android:padding="10sp"
                        />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <TextView
                android:id="@+id/noData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_no_data"
                style="@style/bold_medium"
                android:layout_gravity="center"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="20sp"
                android:visibility="gone"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMetrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:layout_marginVertical="10sp"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>